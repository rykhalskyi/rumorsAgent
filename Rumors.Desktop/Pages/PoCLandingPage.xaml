<Page x:Class="Rumors.Desktop.Pages.PoCLandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rumors.Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PoCLandingPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Agent PoC. No Data Base"
                       TextAlignment="Center"
                       Margin="10,0"
                       VerticalAlignment="Center"/>
            <Button Content="Click"
                    Height="20"
                    Width="50"
                    Click="Button_Click"
                    />
            <Button Content="Click 2"
                Height="20"
                Width="50"
                    Margin="10,0"
                    Click="Button_Click_2"
                    />
        </StackPanel>
        
        <RichTextBox x:Name="logRtichTextBox"
                     Padding="6"
                     Grid.Row="1"
                     VerticalScrollBarVisibility="Auto"
                     IsReadOnly="True"/>
    </Grid>
</Page>
